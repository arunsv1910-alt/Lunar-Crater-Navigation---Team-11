│       ├── setup.py                   # Python package setup
│       └── lunar_simulation/          # Python package
│           ├── __init__.py            # Package init
│           ├── simulation_node.py     # Main simulation node
│           ├── crater_detector.py     # Crater detection node
│           ├── localization_node.py   # Particle filter node
│           └── analysis_utils.py      # Utility functions
│
├── scripts/                           # Analysis and utility scripts
│   ├── analysis.py                    # Full analysis script
│   ├── final_analysis.py              # Final presentation analysis
│   ├── test_simulation.py             # Simulation test script
│   ├── simple_analysis.py             # Simple analysis (backup)
│   └── analysis_plot.py               # Plot generation
│
├── config/                            # Configuration files
│   ├── simulation_config.yaml         # Main simulation config
│   └── parameters.yaml                # ROS 2 parameters
│
├── results/                           # Generated results
│   ├── simulation_results.png         # 6-panel analysis plot
│   ├── final_presentation_results.png # 4-panel final plot
│   ├── performance_metrics.txt        # Raw performance data
│   ├── PROJECT_SUMMARY.md             # Project summary
│   └── terminal_output.txt            # Sample terminal output
│
├── docs/                              # Documentation
│   ├── PROPOSAL.md                    # Original project proposal
│   ├── ARCHITECTURE.md                # System architecture
│   ├── INSTALL.md                     # Installation guide
│   └── PRESENTATION_GUIDE.md          # Presentation guide
│
├── tests/                             # Test files
│   ├── test_simulation.py             # Simulation tests
│   └── test_nodes.py                  # Node tests
│
└── screenshots/                       # Screenshots (to be added)
    ├── gazebo_15_craters.png          # Gazebo with 15 craters
